{
	"git": {
		"commitMessage": "chore(release): version ${version}",
		"tagName": "v${version}"
	},
	"github": {
		"release": true,
		"releaseName": "Release v${version}",
		"tokenRef": "GITHUB_TOKEN"
	},
	"npm": {
    "publish": true,
    "skipChecks": false,
		"publishPath": "./build",
		"publishArgs": ["--access=public"]
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "conventionalcommits",
			"infile": "CHANGELOG.md"
		}
	}
}
